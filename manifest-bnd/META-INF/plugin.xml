<idea-plugin version="2">
  <id>org.jetbrains.manifest.bnd</id>
  <name>Bnd support</name>
  <version>1.0</version>
  <depends>org.osmorc.manifest</depends>
  <idea-version since-build="129.000"/>

  <extensions defaultExtensionNs="com.intellij">
    <errorHandler implementation="com.intellij.diagnostic.ITNReporter"/>
    <fileTypeFactory implementation="org.jetbrains.manifest.bnd.lang.BndFileTypeFactory" />
    <lang.parserDefinition language="BND" implementationClass="org.jetbrains.manifest.bnd.lang.BndParsingDefinition" />
    <lang.syntaxHighlighterFactory key="BND" implementationClass="org.jetbrains.manifest.bnd.lang.BndSyntaxHighlighterFactory" />
    <lang.commenter language="BND" implementationClass="org.jetbrains.manifest.bnd.lang.BndCommenter" />
    <lang.ast.factory language="BND" implementationClass="org.osmorc.manifest.lang.psi.impl.ManifestASTFactory"/>
  </extensions>
</idea-plugin>